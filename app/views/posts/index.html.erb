<div class="container">          
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>Title</th>
				<th>Description</th>
				<th>Picture</th>
				<th colspan="2">Controls</th>
			</tr>
		</thead>
		<tbody>
			<% @posts.each do |post| %>
			<tr>
				<td><%= post.title %></td>
				<td id="max"><%= post.description %></td>
				<td><%= image_tag post.picture.url, class: 'img-thumbnail', data: {alt: "Cinque Terre", width: "304", height: "236"} %></td>
				<td><%= link_to("", post, class: 'btn btn-danger glyphicon glyphicon-trash',  method: :delete, data: {confirm: "Are you sure:o"}) %></td>
				<td><%= link_to "", edit_post_path(post.id), 
				class: 'btn btn-warning glyphicon glyphicon-pencil' %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>

