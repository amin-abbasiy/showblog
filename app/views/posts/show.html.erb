    <!-- Page Content -->
    <div class="container">

      <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

          <!-- Title -->
          <h1 class="mt-4"><%= @post.title %></h1>

          <!-- Author -->
          <p class="lead">
            by
            <%= link_to @post.user.name, "/users/edit" %>
          </p>

          <hr>

          <!-- Date/Time -->
          <p>Posted:<%= time_ago_in_words(@post.created_at) %></p>

          <hr>

          <!-- Preview Image -->
          <%= image_tag @post.picture.url, data: {width: 600, height: 300} %>
          <hr>

          <!-- Post Content -->
          <p class="lead">Head</p>

          <p><%= @post.description %></p>
          <blockquote class="blockquote">
            <p class="mb-0">quote</p>
          </blockquote>
          <hr>

          <!-- Comments Form -->
          <div class="card my-4">
            <h5 class="card-header label label-primary">Leave a Comment:</h5>
            <div class="card-body">
              <%= form_for(@comment) do |f| %>
                <div class="form-group">
                  <%= f.text_area :content, class: 'form-control' %>
                  <%= hidden_field_tag :post_id, @post.id %>
                </div>
                <%= f.submit :Compose, class: 'btn btn-primary' %>
              <% end %>
            </div>
          </div>

          <!-- Single Comment -->
              <%= render @comments %>
            </div>
          </div>

        </div>